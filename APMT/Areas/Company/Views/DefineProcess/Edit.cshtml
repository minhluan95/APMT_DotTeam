@model Models.APMT_Process

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Company/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Process Management

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Process Management</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="box-header">


                            <h4>APMT_Process</h4>
                        </div>
                        <div class="box-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-11">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.JsonContent)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-11">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.Creator_Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Allowed, htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-11">
                                    <div class="checkbox">
                                        <select name="Allowed" class="form-control">

                                            <option value="true">Allowed</option>
                                            <option value="false">Disable</option>
                                        </select>
                                        @Html.ValidationMessageFor(model => model.Allowed, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a class="btn btn-default" href="/Company/DefineProcess/View_List" >Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>